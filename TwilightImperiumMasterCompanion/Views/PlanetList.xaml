<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:local="clr-namespace:TwilightImperiumMasterCompanion;assembly=TwilightImperiumMasterCompanion" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="TwilightImperiumMasterCompanion.PlanetList" Title="Planets">
	<ContentPage.Padding>
		<OnPlatform x:TypeArguments="Thickness">
			<OnPlatform.iOS>
        0, 20, 0, 0
      </OnPlatform.iOS>
			<OnPlatform.Android>
        0, 0, 0, 0
      </OnPlatform.Android>
			<OnPlatform.WinPhone>
        0, 0, 0, 0
      </OnPlatform.WinPhone>
		</OnPlatform>
	</ContentPage.Padding>
	<ContentPage.BindingContext>
		<local:PlanetListViewModel />
	</ContentPage.BindingContext>
	<ContentPage.Content>
		<ListView SelectedItem="{Binding SelectedPlanet}" ItemsSource="{ Binding PlanetsGrouped }" IsGroupingEnabled="True" GroupDisplayBinding="{Binding Key}" GroupShortNameBinding="{Binding Key}">
			<ListView.ItemTemplate>
				<DataTemplate>
					<TextCell Text="{ Binding PlanetName }" />
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</ContentPage.Content>
</ContentPage>